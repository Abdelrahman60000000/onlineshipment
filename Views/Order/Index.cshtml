@using PagedList;
@using PagedList.Mvc;
@*@model PagedList.IPagedList<OnlineShippingApp.Models.Order>*@
@model IEnumerable<OnlineShippingApp.Models.Order>

<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary " })
</p>
@using (Html.BeginForm("Index", "Order", FormMethod.Get))
{
    <p>
        Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" class="btn-info" />
    </p>
}<table class="table table-striped table-hover bg-light">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SpeicialCode)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.clientName)*@
            @Html.ActionLink("Client Name", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })


        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Source)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destination)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrackingBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderStatus)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SpeicialCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.clientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrackingBy)
            </td>
            <td class="bg-secondary">
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OrderId }, new { @class = "btn btn-primary " }) |
                @Html.ActionLink("Details", "Details", new { id = item.OrderId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.OrderId }, new { @class = "btn btn-danger " })
            </td>


        </tr>
    }


</table>




